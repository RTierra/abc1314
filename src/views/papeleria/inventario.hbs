<div class="container">

  <div class="row">
      <div class="col">INVENTARIO</div>
      <div class="col">
        
        </div>
  </div>

  <div class="row">
   <div class="card-body">
    <form action="/inventario" method="POST">
    <div class="row">
        <div class="col">
            <textarea name="title" class="form-control" placeholder="Nombre del producto (Todo en minusculas)"></textarea>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <textarea name="tipo" class="form-control" placeholder="Tipo"></textarea>
        </div>
        <div class="col">
            <textarea name="marca" class="form-control" placeholder="Marca"></textarea>
        </div>
        <div class="col">
            <textarea name="precio" class="form-control" placeholder="Valor"></textarea>
        </div>
        <div class="col">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
    </div>
    </form>
    </div>
  </div>

   <div class="row">
    <div class="col-11">
<table id="datatable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Marca</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos }}
            <tr>
                <td>{{nombre}}</td>
                <td>{{tipo}}</td>
                <td>{{marca}}</td>
                <td>{{precio}}</td>
                <td>{{cantidad}}</td>
                <td>
                    <div class="btn-group dropright" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn badge-secondary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">X</button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <form action="/borr/inventario" method="POST">
                        <button name="nombre" value="{{ _id }}" role="button" type="submit" class="btn badge-secondary">Eliminar</button>
                    </form>
                    </div>
                    </div>
                 </td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Marca</th>
                <th>Precio</th>
            </tr>
        </tfoot>
    </table>
    </div>
  </div>
</div>