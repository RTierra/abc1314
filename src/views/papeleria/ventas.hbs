<div class="col-md-4 mx-auto mt-4">
  <div class="card text-center">
    <div class="card-body">
      <form action="/ventas" method="POST">
        <div class="search_select_box">
            <select class="selectpicker w-100" name="title" id="inputGroupSelect02" data-live-search="true">
              <option selected>Selecciona una opcion</option>
              {{#each productos}}
              <option value="{{nombre}}">{{nombre}}</option>
              {{/each}}
            </select>
        </div>

        <div class="form-group">
          <textarea name="cantidad" class="form-control" placeholder="Cantidad"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<header class="jumbotron my-4">
<div class="table-responsive">
        <table class="table table-striped table-sm">
        <thead>
          <tr>
          <th>Title</th>
          <th>Vendedor</th>
          <th>Fecha</th>
          <th>Hora</th>
          <th>Cantidad</th>
          <th>Borrar</th>
          </tr>
        </thead>
        <tbody>
        {{#each ultimas }}
        <tr>
          <td>{{ title }}</td>
          <td>{{ vendedor }}</td>
          <td>{{ date }}</td>
          <td>{{ time }}</td>
          <td>{{ cantidad }}</td>
          <td>
            <div class="btn-group dropright" role="group">
            <button id="btnGroupDrop1" type="button" class="btn badge-secondary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">X</button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <form action="/borr/ventas" method="POST">
                  <button name="title" value="{{ _id }}" role="button" type="submit" class="btn badge-secondary">Eliminar</button>
                </form>
              </div>
            </div>
          </td>
        </tr>
        {{/each}}     
        </tbody>
        </table>
      </div>
</header>